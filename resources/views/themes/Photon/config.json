{
  "about": {
    "name": "Photon",
    "description": "Beautiful responsive theme.",
    "author": "Html5up & Mentos1386",
    "author_url": "http:\/\/html5up.net\/",
    "version": "1.2"
  },
  "appearance": {
    "menus": [
      {
        "name": "Top Menu",
        "description": "This is menu on top",
        "pos": "top",
        "max": "5"
      },
      {
        "name": "Bottom Menu",
        "description": "This is menu on bottom, for social links",
        "pos": "bottom",
        "max": "10"
      }
    ],
    "page_types": [
      {
        "name": "Default",
        "description": "Default page view",
        "dashboard": "default",
        "view": "default"
      },
      {
        "name": "Transparent",
        "description": "Transparent Page view",
        "dashboard": "default",
        "view": "transparent"
      }
    ],
    "front_page": {
      "builders": {
        "default": "false",
        "items": [
          {
            "name": "Images",
            "description": "Show images",
            "dashboard": "backend.frontpage.builders.images.index"
          },
          {
            "name": "Gallery",
            "description": "Show gallery with images",
            "dashboard": "backend.frontpage.builders.gallery.index"
          },
          {
            "name": "Text",
            "description": "Show custom text with image",
            "dashboard": "backend.frontpage.builders.text.index"
          },
          {
            "name": "Buttons",
            "description": "Show custom buttons",
            "dashboard": "backend.frontpage.builders.buttons.index"
          },
          {
            "name": "Maps",
            "description": "Show google maps",
            "dashboard": "backend.frontpage.builders.maps.index"
          }
        ]
      },
      "posts": {
        "default": "true",
        "items": [
          {
            "name": "Posts settings",
            "description": "Post settings",
            "dashboard": "backend.frontpage.posts.settings.index"
          }
        ]
      }
    }
  }
}


